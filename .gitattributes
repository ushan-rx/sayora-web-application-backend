# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly set text files to use LF line endings in the repository
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf

# Ensure shell scripts have LF line endings
*.sh     text eol=lf

*.bat    text eol=crlf
*.cmd    text eol=crlf
